@using Toystore.Models; 
@model IEnumerable<Toy>

<div class="wrapper">
    <div class="content">
        <h3>Детские игрушки</h3>

        <table class="toylist">
            <tr>
                <td><p>Наименование</p></td>
                <td><p>Цена</p></td>
                <td></td>
            </tr>
            @foreach (Toy toy in Model)
            {
                <tr>
                    <td><p>@toy.Name</p></td>
                    <td><p>@toy.Price руб.</p></td>
                    <td><p><a href="/Home/Buy/@toy.Id">Купить</a></p></td>
                </tr>
            }
        </table>
        <div class="price"><a href="/home/getprice">Скачать прайс-лист</a></div>

        @Html.Action("GetAuthors")

    </div>
</div>
